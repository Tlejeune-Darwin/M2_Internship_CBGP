// Reproduction assets //
reproduction() {
    K = pop_size;
	 inds = p1.individuals;
	 fecundity = 10^(runif(p1.individualCount, 0,max_value));
	 parents1 = sample(inds, K, replace = T, weights = fecundity);
	 parents2 = sample(inds, K, replace = T, weights = fecundity);

    for (i in seqLen(K))
    	 p1.addCrossed(parents1[i], parents2[i]);
    self.active = 0;
}

