    }
}

reproduction() {
    K = popSize;
    parents1 = p1.sampleIndividuals(K, replace=F);
    parents2 = p1.sampleIndividuals(K, replace=F);

    for (i in seqLen(K))
        p1.addCrossed(parents1[i], parents2[i]);

    self.active = 0;
}

