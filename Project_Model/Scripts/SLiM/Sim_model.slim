	 parents1 = sample(inds, K, replace = T, weights = fecundity);
	 parents2 = sample(inds, K, replace = T, weights = fecundity);

    // R√©initialiser la liste des parents
    parent_ids = c();

    for (i in seqLen(K)) {
    offspring = p1.addCrossed(parents1[i], parents2[i]);

	     parent_ids = c();
    for (i in seqLen(K)) {
        offspring = p1.addCrossed(parents1[i], parents2[i]);
        parent_ids = c(parent_ids, parents1[i].pedigreeID, parents2[i].pedigreeID);
